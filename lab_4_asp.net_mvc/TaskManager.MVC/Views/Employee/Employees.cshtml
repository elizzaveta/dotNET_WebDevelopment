@{
    ViewData["Title"] = "Employees Page";
}
@model IEnumerable<TaskManager.MVC.ViewModels.EmployeeViewModel>

<h1>All employees</h1>
<div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @{
                foreach (var employee in Model)
                {
                    <tr>
                        <td>@employee.Employee.Id</td>
                        <td>@employee.Employee.FirstName</td>
                        <td>@employee.Employee.LastName</td>
                        <td>
                            <div class="btn-group-vertical">
                                <button class="btn btn-info" onclick="
                                        location.href='@Url.Action("EmployeeTasks", "Task", new {id = employee.Employee.Id})'">Get tasks</button>
                            </div>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>


