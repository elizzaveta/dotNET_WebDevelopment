@{
    ViewData["Title"] = "Task Page";
}


<h1>Here will be displayed tasks by projects</h1>


@if (false)
{
    <span>There are no tasks</span>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Project</th>
                <th>Employee</th>
                <th>Status</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @{
                foreach (var task in Model.Tasks)
                {
                    <tr>
                        <td>@task.Id</td>
                        <td>@task.Title</td>
                        <td>@task.Project.Name</td>
                        <td>@task.Employee.FirstName @task.Employee.LastName</td>
                        <td>@task.Status.Name</td>
                        <td>
                            <div class="btn-group-vertical">
                                <button class="btn btn-info" onclick="
                                        location.href='@Url.Action("TaskDetails", "Task", new {task.Id})'">Details</button>
                            </div>
                        </td>
                    </tr>
                }
            }
            </tbody>
        </table>
    </div>
}
